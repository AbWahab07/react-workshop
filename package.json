{
  "name": "react-workshop",
  "version": "0.1.0",
  "homepage": "https://react-workshop.netlify.com/",
  "private": true,
  "devDependencies": {
    "@kadira/storybook": "^2.34.0",
    "all-contributors-cli": "^3.0.7",
    "cross-env": "^3.1.3",
    "enzyme": "^2.6.0",
    "enzyme-to-json": "^1.3.0",
    "eslint": "^3.11.1",
    "eslint-config-kentcdodds": "^11.1.0",
    "eslint-import-resolver-webpack": "^0.7.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.8.0",
    "lodash.padstart": "^4.6.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.2",
    "react-addons-test-utils": "^15.4.1",
    "react-scripts": "^0.8.1",
    "split-guide": "^1.1.0"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "scripts": {
    "add-contributor": "all-contributors add",
    "generate-contributors": "all-contributors generate",
    "watch:split:src": "nodemon --watch ./src/workshop-templates --exec \"npm run split:src\"",
    "split": "npm-run-all --parallel split:*",
    "split:src": "cd src && split-guide generate --templates-dir workshop-templates",
    "split:intro": "cd intro && split-guide generate --templates-dir workshop-templates",
    "lint": "eslint .",
    "start": "react-scripts start",
    "build": "npm-run-all build:*",
    "build:app": "react-scripts build",
    "build:storybook": "cross-env NODE_ENV=production build-storybook --static-dir public --output-dir build/storybook",
    "build:intro": "cpy \"intro/**/*.*\" build --parents",
    "test": "react-scripts test --env=jsdom",
    "storybook": "start-storybook --port 9009 --dont-track --config-dir ./.storybook",
    "setup": "node ./scripts/verify && node ./scripts/install && npm run validate",
    "validate": "cross-env CI=true npm-run-all --parallel lint test build"
  }
}
